{% extends 'baseAdmin.html.twig' %}

{% block title %}Vote{% endblock %}

{% block body %}
    <br>
    <h2>Show Info</h2>
    <br>

    <table class="table table-bordered">
        <tbody>
            <tr class="table-active">
                <th>Title</th>
                <td>{{ confirm_vote.title }}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Description</th>
                <td>{{ confirm_vote.description }}</td>
            </tr>
            <tr class="table-active">
                <th scope="col">Date</th>
                <td>{{ confirm_vote.date ? confirm_vote.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('confirm_vote_edit',{'id': confirm_vote.id})}}"><button class="btn btn-outline-info btn-lg">{{ button_label| default ('Edit') }}</button></a>

    <a href="{{ path('confirm_vote_index')}}"><button class="btn btn-outline-info btn-lg">{{ button_label| default ('Back') }}</button></a>
    
{% endblock %}
