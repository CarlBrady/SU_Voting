{% extends 'base.html.twig' %}

{% block title %}Vote index{% endblock %}

{% block body %}
    <br>
    <h2>Scheduled Votes</h2>
    <br>
    <table class="table">
        <thead>
        <tr class="table-active">
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Date</th>
            <th scope="col">&nbsp&nbspMore</th>
        </tr>
        </thead>
        <tbody>
        {% for confirm_vote in confirm_votes %}
            <tr class="table-active">
                <td>{{ confirm_vote.Title }}</td>
                <td>{{ confirm_vote.Description }}</td>
                <td>{{ confirm_vote.Date ? confirm_vote.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('confirm_vote_show_default' , {'id': confirm_vote.id})}}"><button class="btn btn-outline-info btn-sm">{{ button_label| default ('More') }}</button></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
