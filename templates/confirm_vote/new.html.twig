{% extends 'baseAdmin.html.twig' %}

{% block title %}New Vote{% endblock %}

{% block body %}
    <br>
    <h2>New Vote</h2>
    <br>
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="form-group">
        <i class=""></i> {{ form_label(form.date) }}
        {{ form_widget(form.date) }}

        <small>{{ form_help(form.date) }}</small>

        <div class="form-error">
            {{ form_errors(form.date) }}
        </div>
    </div>

    <div class="form-group">
        <i class=""></i> {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control' , 'placeholder':'Title'}}) }}

        <small>{{ form_help(form.title) }}</small>

        <div class="form-error">
            {{ form_errors(form.title) }}
        </div>
    </div>

    <div class="form-group">
        <i class=""></i> {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder':'Description'}}) }}

        <small>{{ form_help(form.description) }}</small>

        <div class="form-error">
            {{ form_errors(form.description) }}
        </div>
    </div>

    <button class="btn btn-outline-info btn-lg">{{ button_label| default ('Submit') }}</button>

    {{ form_end(form) }}


{% endblock %}

