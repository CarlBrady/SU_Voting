{% extends 'baseAdmin.html.twig' %}

{% block title %}Votes{% endblock %}

{% block body %}
    <br>
    <h2>Scheduled Votes</h2>
    <br>

    <table class="table table-bordered">
        <thead>
            <tr class="table-active">
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>&nbsp&nbspMore</th>
            </tr>
        </thead>
        <tbody>
        {% for confirm_vote in confirm_votes %}
            <tr class="table-active">
                <td>{{ confirm_vote.title }}</td>
                <td>{{ confirm_vote.description }}</td>
                <td>{{ confirm_vote.Date ? confirm_vote.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('confirm_vote_show', {'id': confirm_vote.id})}}"><button class="btn btn-outline-info btn-sm">{{ button_label| default ('More') }}</button></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('confirm_vote_new')}}"><button class="btn btn-outline-info btn-lg">{{ button_label| default ('New Vote') }}</button></a>

{% endblock %}
