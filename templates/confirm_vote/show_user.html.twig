{% extends 'baseUser.html.twig' %}

{% block title %}ConfirmVote{% endblock %}

{% block body %}
    <br>
    <h2>Show Info</h2>
    <br>

    <table class="table">
        <tbody>
        <tr class="table-active">
            <th>Title</th>
            <td>{{ confirm_vote.Title }}</td>
        </tr>
        <tr class="table-active">
            <th scope="col">Description</th>
            <td>{{ confirm_vote.Description }}</td>
        </tr>
        <tr class="table-active">
            <th scope="col">Date</th>
            <td>{{ confirm_vote.Date ? confirm_vote.Date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('confirm_vote_user_index')}}"><button class="btn btn-outline-info btn-lg">{{ button_label| default ('Back') }}</button></a>

{% endblock %}
