{% extends 'baseAdmin.html.twig' %}

{% block title %}Contact Index{% endblock %}

{% block body %}
    <br>

    <h2>Contact Page</h2>
    <br>
    <table class="table table-bordered">
        <thead>
        <tr class="table-active">
                <th>Name</th>
                <th>Email</th>
                <th>Comment</th>
                <th>&nbsp&nbspMore</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr class="table-active">
                <td>{{ contact.name }}</td>
                <td>{{ contact.email }}</td>
                <td>{{ contact.comment }}</td>
                <td>
                    <a href="{{ path('contact_show', {'id': contact.id})}}"><button class="btn btn-outline-info btn-sm">{{ button_label| default ('More') }}</button></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_admin')}}"><button class="btn btn-outline-info btn-lg">{{ button_label| default ('Create New') }}</button></a>
    {% endblock %}
