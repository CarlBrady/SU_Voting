{% extends 'baseAdmin.html.twig' %}

{% block title %}New Comment{% endblock %}

{% block body %}
    <br>
    <h2>New Comment</h2>
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>


    <div class="form-group">
        {{ form_widget(form.comment, {'attr': {'class': 'form-control', 'placeholder':'Comment'}}) }}

        <small>{{ form_help(form.comment) }}</small>

        <div class="form-error">
            {{ form_errors(form.comment) }}
        </div>
    </div>



    <a href="{{ path('vote_index') }}">
        <button class="btn btn-outline-info btn-lg">Back</button>
    </a>
    <button class="btn btn-outline-info btn-lg">{{ button_label| default ('Submit') }}</button>


    {{ form_end(form) }}


{% endblock %}
