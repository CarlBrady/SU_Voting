<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.3.1/superhero/bootstrap.min.css" rel="stylesheet" integrity="sha384-LS4/wo5Z/8SLpOLHs0IbuPAGOWTx30XSoZJ8o7WKH0UJhRpjXXTpODOjfVnNjeHu" crossorigin="anonymous">

    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-12">

            <nav class="navbar navbar-expand-lg navbar-dark navbar-bg mb-5">
                <a style="margin-left: 75px;"></a>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a style="color: #fff;" class="nav-link" href="{{ url('admin_home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #fff;" class="nav-link" href="{{ url('admin_about') }}">About</a>
                    </li>
                    <li class="nav-item">
                        <a style="color: #fff;" class="nav-link" href="{{ url('contact_admin') }}">Contact</a>
                    </li>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item">
                            <a style="color: #fff;" class="nav-link" href="{{ url('app_logout') }}"> Logout</a>
                        </li>
                        <li class="nav-item" >
                            <a style="color: #fff;" class="nav-link">
                                <u> <strong>{{ app.user.username }}</strong></u>
                            </a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a style="color: #fff;" class="nav-link" href="{{ url('app_login') }}">  Login</a>
                        </li>
                    {% endif %}


                </ul>
            </nav>

            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <a style="color: #4D5D6C ;" class="navbar-brand" href="#"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('confirm_vote_index') }}">Votes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('vote_index') }}">Proposed<span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('user_index') }}">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ url('contact_index') }}">Comments</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">

                    </form>
                </div>
            </nav>
            {% block body %}{% endblock %}
        </div>
    </div>
</div>


{% block javascripts %}{% endblock %}

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

</body>
</html>


