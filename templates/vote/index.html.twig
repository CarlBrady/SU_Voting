{% extends 'baseAdmin.html.twig' %}

{% block title %}Vote index{% endblock %}

{% block body %}
    <h1>Vote index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Up</th>
                <th>Down</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vote in votes %}
            <tr>
                <td>{{ vote.id }}</td>
                <td>{{ vote.Title }}</td>
                <td>{{ vote.Description }}</td>
                <td>{{ vote.Up }}</td>
                <td>{{ vote.Down }}</td>
                <td>
                    <a href="{{ path('vote_show', {'id': vote.id}) }}">show</a>
                    <a href="{{ path('vote_edit', {'id': vote.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vote_new') }}">Create new</a>
{% endblock %}
