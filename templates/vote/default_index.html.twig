{% extends 'base.html.twig' %}

{% block title %}Vote index{% endblock %}

{% block body %}
    <br>
    <h2>Proposed Votes</h2>
    <br>
    <table class="table table-bordered">
        <thead>
        <tr class="table-active">
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">More</th>
        </tr>
        </thead>
        <tbody>
        {% for vote in votes %}
            <tr class="table-active">
                <td>{{ vote.title }}</td>
                <td>{{ vote.description }}</td>
                <td>
                    <a href="{{ path('vote_show_default', {'id': vote.id})}}"><button class="btn btn-outline-info btn-sm">{{ button_label| default ('More') }}</button></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
