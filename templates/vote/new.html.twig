{% extends 'baseUser.html.twig' %}

{% block title %}New Contact{% endblock %}

{% block body %}
    <br>
    <h2>New Vote</h2>
    <br>
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="form-group">
        <i class=""></i> {{ form_label(form.Username) }}
        {{ form_widget(form.Username, {'attr': {'class': 'form-control'}}) }}

        <small>{{ form_help(form.Username) }}</small>

        <div class="form-error">
            {{ form_errors(form.Username) }}
        </div>
    </div>

    <div class="form-group">
        <i class=""></i> {{ form_label(form.Title) }}
        {{ form_widget(form.Title, {'attr': {'class': 'form-control'}}) }}

        <small>{{ form_help(form.Title) }}</small>

        <div class="form-error">
            {{ form_errors(form.Title) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.Description) }}
        {{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}

        <small>{{ form_help(form.Description) }}</small>

        <div class="form-error">
            {{ form_errors(form.Description) }}
        </div>
    </div>




    <button class="btn btn-outline-info btn-lg">{{ button_label| default ('Submit') }}</button>
    </div>
    </div>
    {{ form_end(form) }}


{% endblock %}

