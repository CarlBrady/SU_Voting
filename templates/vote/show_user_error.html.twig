            <a href="{{ path('vote_down', {'id':vote.id})}}"><button class="btn btn-danger btn-lg disabled">{{ button_label| default ('Against') }}</button></a>


    </table>



    <table class="table table-bordered">
        <tbody>
        <tr class="table-active">
            <th scope="col">Proposed By</th>
            <td>{{ vote.username }}</td>
        </tr>
        <tr class="table-active">
