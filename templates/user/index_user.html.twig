{% extends 'baseAdmin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <br>
    <h2>Users</h2>
    <br>

    <table class="table">
        <thead>
            <tr class="table-active">
                <th>First Name</th>
                <th>Last Name</th>
                <th>UserName</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="table-active">
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.username}}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
