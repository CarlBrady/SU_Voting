{% extends 'baseUser.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <br>
    <h2>User index</h2>
    <br>

    <table class="table">
        <thead>
        <tr class="table-active">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Campus</th>


        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr class="table-active">
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.campus }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
